<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.OrderingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/name_order"
                android:inputType="textPersonName"
                android:paddingTop="30dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userNumber"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/number_order"
                android:inputType="phone" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Donetsk"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Makeevka"
                    android:textSize="18dp" />

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userStreet"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/street_order" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userHome"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/home_order"
                android:inputType="number" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/userNumberOffice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/number_office_order"
                android:inputType="number" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/commentOrder"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/comment_order" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_order"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Оформить заказ"
                android:textSize="24dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>